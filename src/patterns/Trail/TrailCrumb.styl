@import "~@/assets/tokens/tokens.styl"@import "~@/styles/media.styl".vocab.trail  // Color  --trail-crumb-text-color var(--trail-primary)  --trail-crumb-separator-text-color var(--trail-secondary)  --trail-crumb-last-text-color var(--trail-tertiary)  // Children  & > .crumbs    & > .crumb      display flex      flex-direction row      align-items center      color var(--trail-crumb-text-color)      counter-reset section      & > .spacing        display inline-block        text-align center        min-width 1.25em        +tablet-portrait-up()          display none      & > a        color inherit        text-decoration inherit      & > .separator        color var(--trail-crumb-separator-text-color)        margin $space-zero $space-normal        +phone-only()          display none      &:not(:last-of-type)        text-decoration underline dotted        +phone-only()          padding-bottom $space-normal      &:last-of-type        color var(--trail-crumb-last-text-color)        & > .separator          display none